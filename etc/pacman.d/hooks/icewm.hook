[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = icewm

[Action]
Description = Copy content of icewm-session.desktop to icewm.desktop in /usr/share/xsessions
When = PostTransaction
Exec = /bin/sh -c "cp /usr/share/xsessions/icewm-session.desktop /usr/share/xsessions/icewm.desktop"
